<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="8dp"
    android:background="@color/colorCardBackground">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorPrimaryDark"
            android:text="Your Current Trip"
            android:layout_marginBottom="16dp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:id="@+id/driver_title"
                    android:text="Driver Details"
                    android:textAppearance="?android:listSeparatorTextViewStyle"
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimary" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_above="@+id/person_photo"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="16dp"
                    android:id="@+id/person_photo"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/driver_title"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_blank" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/person_name"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_marginTop="16dp"
                    android:text="Sample Name"
                    android:layout_below="@+id/driver_title"
                    android:layout_toEndOf="@id/person_photo"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/person_age"
                    android:text="Sample Number"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_below="@+id/person_name"
                    android:layout_toEndOf="@+id/person_photo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/person_no"
                    android:text="Sample License"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_below="@+id/person_age"
                    android:layout_toEndOf="@+id/person_photo" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_above="@+id/button2"
                    android:layout_alignParentStart="true" />

                <Button
                    android:id="@+id/button2"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/person_photo"
                    android:layout_centerHorizontal="true"
                    android:text="Call the Driver"
                    android:textColor="@color/colorPrimary"
                    android:textAppearance="?android:listSeparatorTextViewStyle" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="32dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cosawaaris"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/tvCoTitle"
                    android:textAppearance="?android:listSeparatorTextViewStyle"
                    android:textSize="16sp"
                    android:padding="10dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_below="@id/tvCoTitle"
                    android:layout_alignParentStart="true" />

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lvCowaraais"
                    android:layout_below="@+id/tvCoTitle"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="4dp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:id="@+id/trip_title"
                    android:text="Trip Details"
                    android:textColor="@color/colorPrimary"
                    android:textAppearance="?android:listSeparatorTextViewStyle"
                    android:textSize="16sp"
                    android:padding="10dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_below="@id/trip_title"
                    android:layout_marginTop="1dp"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Trip Id"
                    android:id="@+id/textView"
                    android:layout_below="@+id/trip_title"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="12dp"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="10"
                    android:id="@+id/textView2"
                    android:layout_alignBottom="@+id/textView"
                    android:layout_alignParentEnd="true" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_below="@id/textView2"
                    android:layout_marginTop="6dp"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Cab Date"
                    android:id="@+id/textView3"
                    android:layout_below="@+id/textView"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="12dp"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="28 November, 2015"
                    android:id="@+id/textView4"
                    android:layout_alignBottom="@+id/textView3"
                    android:layout_alignParentEnd="true" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_below="@id/textView4"
                    android:layout_marginTop="6dp"
                    android:layout_alignParentStart="true" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Cab departure time"
                    android:id="@+id/textView5"
                    android:layout_below="@+id/textView3"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="12dp"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="09:00"
                    android:id="@+id/textView6"
                    android:layout_alignBottom="@+id/textView5"
                    android:layout_alignParentEnd="true" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_below="@id/textView6"
                    android:layout_marginTop="6dp"
                    android:layout_alignParentStart="true" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Flight date"
                    android:id="@+id/textView7"
                    android:layout_below="@+id/textView6"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="12dp"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="28 November, 2015"
                    android:id="@+id/textView8"
                    android:layout_alignBottom="@+id/textView7"
                    android:layout_alignParentEnd="true" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_below="@id/textView8"
                    android:layout_marginTop="6dp"
                    android:layout_alignParentStart="true" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Flight Departure Time"
                    android:id="@+id/textView9"
                    android:layout_below="@+id/textView7"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="12dp"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="14:00"
                    android:id="@+id/textView10"
                    android:layout_alignBottom="@+id/textView9"
                    android:layout_alignParentEnd="true" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_below="@id/textView10"
                    android:layout_marginTop="6dp"
                    android:layout_alignParentStart="true" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Pickup Point"
                    android:id="@+id/textView11"
                    android:layout_below="@+id/textView9"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="12dp"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Boys Hostel, H Block"
                    android:id="@+id/textView12"
                    android:layout_alignBottom="@+id/textView11"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Your Trip Details will only be available a few hours before your journey. If you don't see your details now, Come back later."
            android:id="@+id/textView15"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="140dp" />
    </LinearLayout>
</ScrollView>